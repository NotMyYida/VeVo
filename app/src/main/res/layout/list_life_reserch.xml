<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="160dp"
    app:cardCornerRadius="2dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="16dp"
    >

    <ImageView
        android:id="@+id/iv_life_research_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/cover2"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="#66666666"
        >
        <TextView
            android:id="@+id/tv_life_research_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vol.453"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/tv_life_research_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="工作之余"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@id/tv_life_research_no"
            />

        <TextView
            android:id="@+id/tv_life_research_collected_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:text="8493"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:id="@+id/tv_collect_life_research"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_toLeftOf="@id/tv_life_research_collected_num"
            android:text="@string/collected"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="3dp"
            />

        <TextView
            android:id="@+id/tv_life_research_read_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            android:layout_toLeftOf="@id/tv_collect_life_research"
            android:text="4.8万"
            />

        <TextView
            android:id="@+id/tv_life_research_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="3dp"
            android:textColor="@android:color/white"
            android:layout_toLeftOf="@id/tv_life_research_read_num"
            android:text="@string/read"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>